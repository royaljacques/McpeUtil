{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "ESNext",                
    "moduleResolution": "node",        
    "outDir": "./dist",                
    "rootDir": "./src",                
    "strict": true,                    
    "esModuleInterop": true,           
    "resolveJsonModule": true,         
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,          
    "baseUrl": ".",                   
    "paths": {
      "*": ["src/*"]                  
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
